<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(LiftrExeTargetFramework)</TargetFramework>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="$(PackageVersion_Microsoft_Extensions_Configuration_CommandLine)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="$(PackageVersion_Microsoft_Extensions_Configuration_EnvironmentVariables)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="$(PackageVersion_Microsoft_Extensions_Configuration_Json)" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="$(PackageVersion_Microsoft_Extensions_Hosting)" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="$(PackageVersion_Microsoft_Extensions_Hosting_Abstractions)" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="$(PackageVersion_Microsoft_Extensions_Logging)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="$(PackageVersion_Microsoft_Extensions_Logging_Configuration)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="$(PackageVersion_Microsoft_Extensions_Logging_Console)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="$(PackageVersion_Microsoft_Extensions_Logging_Debug)" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="$(PackageVersion_Microsoft_VisualStudio_Azure_Containers_Tools_Targets)" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="**\*.json" Exclude="bin\**\*;obj\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Liftr.GenericHosting\Liftr.GenericHosting.csproj" />
    <ProjectReference Include="..\..\Liftr.Logging.GenericHosting\Liftr.Logging.GenericHosting.csproj" />
  </ItemGroup>
</Project>